<Window x:Class="BasicTicTacToe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BasicTicTacToe"
        mc:Ignorable="d"
        Title="Muntadher's Tic Tac Toe" Height="350" Width="500" FontSize="16" WindowStartupLocation="CenterScreen" MinHeight="350" MinWidth="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Row 0 Controls-->
        <Label x:Name="TitleBar" Content="Tic Tac Toe" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="1"/>
        <Label x:Name="Score" Content="Score" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="5" Grid.Row="0" Grid.ColumnSpan="2"/>

        <!--Row 1 Controls-->
        <Label x:Name="XPlayer" Content="X Player" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1"/>
        <TextBox x:Name="XPlayerName" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="60" ToolTip="X player name" Grid.Column="2" Grid.Row="1"/>
        <Label x:Name="OPlayer" Content="O Player" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="3" Grid.Row="1"/>
        <TextBox x:Name="OPlayerName" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="60" ToolTip="O player name" Grid.Column="4" Grid.Row="1"/>
        <Label x:Name="XScore" Content="X" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="5" Grid.Row="1"/>
        <TextBox x:Name="XScoreDisplay" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="20" ToolTip="Score of X player wins" IsReadOnly="True" Grid.Column="6" Grid.Row="1"/>

        <!--Row 2 Controls-->
        <Label x:Name="CurrentPlayer" Content="Current Player" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="3"/>
        <Label x:Name="OScore" Content="O" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="5" Grid.Row="2"/>
        <TextBox x:Name="OScoreDisplay" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="20"  ToolTip="Score of O player wins" IsReadOnly="True" Grid.Column="6" Grid.Row="2"/>

        <!--Row 3 Controls-->
        <TextBox x:Name="CurrentPlayerDisplay" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="60" ToolTip="Label to show current pLayer's turn" IsReadOnly="True" Grid.Column="2" Grid.Row="3" Grid.ColumnSpan="3"/>
        <Label x:Name="TieScore" Content="Tie" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="5" Grid.Row="3"/>
        <TextBox x:Name="TieScoreDisplay" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="20" ToolTip="Number of times a game ended in a tie" IsReadOnly="True" Grid.Column="6" Grid.Row="3"/>

        <!--Row 4 Controls-->
        <Button x:Name="ResetButton" Content="_Reset" HorizontalAlignment="Center" VerticalAlignment="Center" Width="45" ToolTip="Press this button to reset the game" Click="ResetButton_Click" Grid.Column="5" Grid.Row="4"/>
        <Button x:Name="ExitButton" Content="_Exit" HorizontalAlignment="Center" VerticalAlignment="Center" Width="45" ToolTip="Press this button to exit the program" Click="ExitButton_Click" Grid.Column="6" Grid.Row="4"/>

        <!--Row 5 Controls-->
        <Grid VerticalAlignment="Bottom" HorizontalAlignment="Center" Grid.Column="2" Grid.Row="5" Grid.RowSpan="3" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!--Row 0 Controls-->
            <Button x:Name="One" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="50" MinHeight="50" Content="" Click="One_Click"/>
            <Button x:Name="Two" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="50" MinHeight="50" Content="" Click="Two_Click"/>
            <Button x:Name="Three" Grid.Column="2" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="50" MinHeight="50" Content="" Click="Three_Click"/>

            <!--Row 1 Controls-->
            <Button x:Name="Four" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="50" MinHeight="50" Content="" Click="Four_Click"/>
            <Button x:Name="Five" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="50" MinHeight="50" Content="" Click="Five_Click"/>
            <Button x:Name="Six" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="50" MinHeight="50" Content="" Click="Six_Click"/>

            <!--Row 2 Controls-->
            <Button x:Name="Seven" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="50" MinHeight="50" Content="" Click="Seven_Click"/>
            <Button x:Name="Eight" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="50" MinHeight="50" Content="" Click="Eight_Click"/>
            <Button x:Name="Nine" Grid.Column="2" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="50" MinHeight="50" Content="" Click="Nine_Click"/>
        </Grid>
    </Grid>
</Window>
